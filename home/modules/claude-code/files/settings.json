{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "respectGitignore": false,
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "attribution": {
    "commit": ""
  },
  "permissions": {
    "allow": [
      "Read(~/.claude/skills/**)",
      "Bash(gh api repos/*/*/pulls/*/comments)",
      "Bash(gh issue view *)",
      "Bash(gh pr view *)",
      "Bash(gh pr diff *)",
      "Bash(gh repo view *)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git ls-files *)",
      "Bash(git branch *)",
      "Bash(git status)",
      "Bash(script -qf /dev/null -c 'npx @slidev/cli --open false */slide.md')",
      "Bash(tmux ls *)",
      "Bash(uv run pytest *)",
      "Bash(uv run ruff check *)",
      "Bash(uv run ruff format *)",
      "Skill(design-doc)",
      "Skill(github-cli)",
      "Skill(design-doc-create)",
      "Skill(design-doc-execute)",
      "Skill(design-doc-interview)",
      "Skill(research-presentation)",
      "Skill(pathfinder-explain)",
      "Skill(sync-skills)",
      "Skill(research-report)",
      "Skill(slidev)",
      "Skill(my-slidev)",
      "Skill(review-claude-config)",
      "Edit",
      "NotebookEdit",
      "WebFetch",
      "WebSearch",
      "Write",
      "mcp__pathfinder-python__definition"
    ],
    "deny": [
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(touch *)",
      "Bash(tree *)"
    ]
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/bin/status.py"
  },
  "language": "Use Japanese for chat conversations, English for writing files",
  "alwaysThinkingEnabled": true,
  "teammateMode": "tmux"
}
